
# Skybox shader config file
version = 2

[general]
name = Shader.Builtin.Skybox
cullMode = front
depthTest  = false
depthWrite = false
[/general]

[stages]
vertex = Builtin.SkyboxShader.vert
fragment = Builtin.SkyboxShader.frag
[/stages]

[attributes]
inPosition = vec3
inNormal = vec3
inTexCoord = vec2
inColor = vec4
inTangent = vec3
[/attributes]

[uniforms]
[global]
projection = mat4
view = mat4
[/global]
[instance]
cubeTexture = samplerCube
[/instance]
[/uniforms]