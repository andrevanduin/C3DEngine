
# Color3D shader config file
version = 2

[general]
name = Shader.Builtin.Color3D
depthTest = true
depthWrite = true
topology = lineList, triangleList
[/general]

[stages]
vertex = Builtin.Color3D.vert
fragment = Builtin.Color3D.frag
[/stages]

[attributes]
inPosition = vec4 
inColor = vec4
[/attributes]

[uniforms]
[global]
projection = mat4
view= mat4 
[/global]
[local]
model = mat4 
[/local]
[/uniforms]